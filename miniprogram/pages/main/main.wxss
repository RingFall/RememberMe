.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 150rpx;
}

.word-content {
  margin: 234rpx auto 18rpx;
  font-family: Chalkboard;
  font-size: 64rpx;
}

.pron-container {
  display: flex;
  flex-direction: row;
}

.pron-icon {
  width: 48rpx;
  height: 48rpx;
}

.word-pron {
  margin-left: 9rpx;
  font-family: Chalkboard;
  font-size: 36rpx;
  color: #63B8FF;
}

.word-tone{
  font-family: Chalkboard;
  font-size: 36rpx;
   color: #63B8FF;
}

.word-definition {
  margin-top: 194rpx;
  font-family: Yuanti TC;
  font-size: 30rpx;
  color: #63B8FF;
}

.button-miss {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
  margin-top: 157rpx;
  margin-bottom: 37rpx;
}

.word-miss {
  margin: auto;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #585858;
}

.button-next {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid#63B8FF;
  border-radius: 10rpx;
  align-items: center;
}

.word-next {
  margin: auto;
  font-family: Songti TC;
  font-size: 32rpx;
  color:#63B8FF;
}


/* 下拉菜单  */
.page_bd{
  width: 90%;
  margin-top: 10px;
  padding:10px;
  background-color:  #63B8FF;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #ffffff;
  border-radius: 10rpx;
}

.body_head{
  padding: 10px;
  text-align: center;
}

.display_show{
  display: block;
  border: 1px solid #63B8FF;
  border-bottom:0.8px solid #ffffff;
  padding: 10px;
}
.display_none{
  display: none;
  width: 100%;
}
.book_icon{
 display: inline-block;
 position: absolute;
 width: 30%;
 height: 0%;
 margin-top: 1.6%;
}
.icon_img{
  width: 20px;
  height: 10px;
  position: absolute;
  left: 100%;
}
.page_row{
  display: flex;
  flex-direction: row
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.input-search {
 margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;

}
.button-search {
  margin: auto;
  display: flex;
  flex-direction: column;
  border: 2rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
}

.text-search {
  margin: auto;
  text-align: center;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #585858;
  height: 50rpx;
  width:110rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
