/* pages/main/word/word.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.progress {
  width: 95%;
  margin: 20rpx;
}

.word-content {
  font-family: Chalkboard;
  font-size: 64rpx;
  float:left;
}
.save{
  width: 70rpx;
  height: 70rpx;
  float:right;
  margin-top: 50rpx;
}


.word-definition {
  margin-top: 70rpx;
  font-family: Yuanti TC;
  font-size: 40rpx;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.word-example{
  margin-top: 30rpx;
  font-size: 30rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.button-miss {
  display: flex;
  flex-direction:column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid ;
  border-radius: 10rpx;
  align-items: center;
  margin-top: 157rpx;
  margin-bottom: 37rpx;
  background-color: #ffffff;
}

.word-miss {
  margin: auto;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #63B8FF;
}

.button-next {
  display: flex;
  flex-direction:column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid ;
  border-radius: 10rpx;
  align-items: center;
}

.word-next {
  margin: auto;
  font-family: Songti TC;
  font-size: 32rpx;
